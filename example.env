# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token
ADMIN_CHANNEL_ID=your_admin_channel_id

# Blockfrost API Configuration
BLOCKFROST_PROJECT_ID=your_blockfrost_project_id
BLOCKFROST_BASE_URL=https://cardano-mainnet.blockfrost.io/api/v0
BLOCKFROST_IP_RANGES=["1.2.3.4/32", "5.6.7.8/32"]  # List of allowed IP ranges

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/walletbud
ARCHIVE_AFTER_DAYS=90
DELETE_AFTER_DAYS=180
MAINTENANCE_BATCH_SIZE=1000
MAINTENANCE_MAX_RETRIES=3
MAINTENANCE_HOUR=2
MAINTENANCE_MINUTE=0

# Webhook Configuration
WEBHOOK_RATE_LIMIT=100
MAX_WEBHOOK_SIZE=1048576  # 1MB in bytes
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Queue Configuration
MAX_QUEUE_SIZE=10000
MAX_RETRIES=5
MAX_EVENT_AGE=3600
BATCH_SIZE=10
PROCESS_INTERVAL=1
MAX_ERROR_HISTORY=1000

# Performance Tuning
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_PARALLEL_WORKERS=4
POSTGRES_WORK_MEM=64MB
POSTGRES_MAINTENANCE_WORK_MEM=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=4GB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
